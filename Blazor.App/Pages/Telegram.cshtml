@page "/telegram"
@using Blazor.App.Services

@inject Data Data


<div class="grid-x grid-padding-x grid-padding-y grid-container">

    <div class="cell small-12">
        <label>Сообщения рассылаются в канале SimpleProgramChannel в Telegram</label>
    </div>
    
    <div class="cell small-12">
        <div class="input-group">
            <span class="input-group-label">Сообщение:</span>
            <input class="input-group-field" type="text" bind="@Data.TgTelegram.Test.Messages["msg"].Text"/>
            <div class="input-group-button">
                <input type="submit" class="button" value="Отправить"
                       onclick="@(() =>
                                  {
                                      Data.TgTelegram.Test.Value = true;
                                      Data.TgTelegram.Test.Value = false;
                                  })"
                />
            </div>
        </div>
    </div>

</div>


@functions
{
}